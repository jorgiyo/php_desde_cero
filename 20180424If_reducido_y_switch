  public function operacion($datosR,$operacion='suma'){
    switch ($operacion)
    {
      case 'suma':
        
      $resultado=$datosR[0]+$datosR[1];
      break;
      case 'resta':
      $resultado=$datosR[0]-$datosR[1]-$datosR[2]-$datosR[3];
      break;
    }
    
    return $resultado;
  }
  
  
 function if_reducido(){
   $edad=18;
   $entra=($edad>=18)?"Entra":"No entra";
   return $entra;
 } 
}



